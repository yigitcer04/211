
public class Shape {
    private int sides;  // number of sides

    
    public Shape(int sides) {
        this.sides = sides;
    }

    
    public int getSides() {
        return sides;
    }

  
    public void setSides(int sides) {
        this.sides = sides;
    }
}


public class Circle extends Shape {
    private double radius;

    public Circle(double radius) {
        // A circle doesn’t really have “sides” in the polygon sense; 
        // we’ll conventionally set sides = 1 (or 0). Let’s pick 1.
        super(1);  // call parent constructor to set number of sides = 1
        this.radius = radius;
    }

    public double getRadius() {
        return radius;
    }

    public void setRadius(double radius) {
        this.radius = radius;
    }

    public double area() {
        return Math.PI * radius * radius;
    }
}


public class Rectangle extends Shape {
    private double width;
    private double height;

    public Rectangle(double width, double height) {
        super(4);  // rectangle has 4 sides
        this.width = width;
        this.height = height;
    }

    public double getWidth() {
        return width;
    }

    public void setWidth(double width) {
        this.width = width;
    }

    public double getHeight() {
        return height;
    }

    public void setHeight(double height) {
        this.height = height;
    }

    public double area() {
        return width * height;
    }
}

public class Main {
    public static void main(String[] args) {
        Circle c = new Circle(5.0);
        Rectangle r = new Rectangle(3.0, 4.0);

        System.out.println("Circle sides: " + c.getSides());     // should print 1
        System.out.println("Circle area: " + c.area());

        System.out.println("Rectangle sides: " + r.getSides());  // should print 4
        System.out.println("Rectangle area: " + r.area());
    }
}
